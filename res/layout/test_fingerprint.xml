<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:orientation="horizontal">
		<EditText
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:clickable="false"
			android:enabled="false"
			android:gravity="top"
			android:hint="CAN接收区"
			android:isScrollContainer="true"
			android:scrollbarStyle="insideOverlay"
			android:textSize="12sp"></EditText>
	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="12"
		android:orientation="horizontal">

		<EditText
			android:id="@+id/EditTextReception2"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:clickable="false"
			android:enabled="false"
			android:gravity="top"
			android:hint="@string/recvdata"
			android:isScrollContainer="true"
			android:scrollbarStyle="insideOverlay"
			android:textSize="12sp"
			android:scrollbars="vertical"
			android:fadeScrollbars="false"></EditText>
	</LinearLayout>
	<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/test_can"
				android:textSize="8sp" />

			<EditText
				android:id="@+id/EditTextEmission2"
				android:layout_width="200dp"
				android:layout_height="wrap_content"
				android:enabled="false"
				android:clickable="false"
				android:hint="0x53 0x73 0x01 0x11 0x22 0x33 0x45 0x65"
				android:lines="1"
				android:textSize="8sp"></EditText>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:orientation="horizontal">
				<Button
					android:id="@+id/okbt2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/charsend"
					android:textSize="12sp">
				</Button>
			</LinearLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="发送字符数:"
				android:textSize="8sp" />

			<EditText
				android:id="@+id/txCount2"
				android:layout_width="200dp"
				android:layout_height="wrap_content"
				android:hint="@string/inputdata"
				android:lines="1"
				android:textSize="8sp"></EditText>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="接收帧数:"
				android:textSize="8sp" />

			<EditText
				android:id="@+id/rxCount2"
				android:layout_width="200dp"
				android:layout_height="wrap_content"
				android:hint="@string/inputdata"
				android:lines="1"
				android:textSize="12sp">
			</EditText>

		</LinearLayout>




	</LinearLayout>


